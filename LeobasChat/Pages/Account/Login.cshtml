@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-body">
                            <ul class="nav nav-tabs final-login">
                                <li class="active"><a data-toggle="tab" href="#sectionA">Login</a></li>
                                <li><a asp-page="/Account/Register">Cadastre-se</a></li>
                            </ul>
                            <div class="tab-content">
                                <div id="sectionA" class="tab-pane fade in active">
                                    <div class="innter-form">
                                        <form class="sa-innate-form" method="post" id="myform">
                                            <div asp-validation-summary="All" class="text-danger"></div>
                                            <div class="form-group">
                                                <label asp-for="Input.Username"></label>
                                                <input asp-for="Input.Username" placeholder="Nick">
                                                <span asp-validation-for="Input.Username" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Input.Password"></label>
                                                <input asp-for="Input.Password" placeholder="Senha">
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <div class="checkbox">
                                                    <label asp-for="Input.RememberMe">
                                                        <input asp-for="Input.RememberMe" />
                                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <button type="submit">Login</button>
                                            </div>
                                            <div class="form-group">
                                                <a asp-page="./ForgotPassword">Esqueceu sua senha?</a>
                                            </div>
                                        </form>
                                    </div>
                                    @*@{
                                        if ((Model.ExternalLogins?.Count ?? 0) != 0)
                                        {
                                            <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                                <div class="social-login">
                                                    <p>- - - - - - - - - - - - - Sign In With - - - - - - - - - - - - - </p>
                                                        @foreach (var provider in Model.ExternalLogins)
                                                        {
                                                             <button class="@("fa fa-" + @provider.Name)" type="submit" value="@provider.Name" name="provider">@provider.DisplayName</button>
                                                        }
                                                        <button href="#" class="fa fa-twitter">Twitter</button>
                                                </div>
                                            </form>
                                        }
                                    }*@
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
