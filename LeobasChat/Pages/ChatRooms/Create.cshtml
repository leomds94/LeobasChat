@page
@model CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div>
    <p>
        Crie um novo chat
    </p>
    <div asp-validation-summary="All"></div>
    <form method="post">
        <div>Name: <input asp-for="ChatRoom.Name" /></div>
        <div>É Publica: <input asp-for="ChatRoom.IsPublic" /></div>
        <div>Limite de usuários: <input asp-for="ChatRoom.UserLimit" /></div>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>

</div>